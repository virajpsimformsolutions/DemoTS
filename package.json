    "husky": "^4.3.0",
    "jest": "^25.1.0",
    "metro-react-native-babel-preset": "^0.59.0",
    "plop": "^2.7.4",
    "react-test-renderer": "16.13.1",
    "reactotron-react-native": "^5.0.0",
    "reactotron-redux": "^3.1.3",
